<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="generator.properties"/>
    <context id="testTables" targetRuntime="MyBatis3" defaultModelType="flat">
        <!--生成mapper.xml时覆盖原文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <!-- 1、jdbcConnection 配置数据库连接信息。-->
        <jdbcConnection
                driverClass="${jdbc.driverClass}"
                connectionURL="${jdbc.connectionURL}"
                userId="${jdbc.userId}"
                password="${jdbc.password}">
            <!--解决mysql驱动升级到8.0后不生成指定数据库代码的问题-->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>
        <!--2、javaModelGenerator 配置 JavaBean(实体类) 的⽣成策略。targetPackage:实体类所在的包 targetProject:创建包的位置-->
        <javaModelGenerator targetPackage="com.neu.ms.mbg.model"
                            targetProject="./src/main/java"></javaModelGenerator>
        <!--3、sqlMapGenerator 配置 SQL 映射⽂件⽣成策略。-->
        <sqlMapGenerator targetPackage="com.neu.ms.mbg.mapper"
                         targetProject="./src/main/resources"></sqlMapGenerator>
        <!--4、javaClientGenerator 配置 Mapper 接⼝的⽣成策略。-->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.neu.ms.mbg.mapper" targetProject="./src/main/java">
        </javaClientGenerator>
        <!--5、table 配置⽬标数据表（tableName：表名，domainObjectName：JavaBean 类名）。-->
        <!--生成全部表tableName设为%-->
        <table tableName="%">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>

</generatorConfiguration>
