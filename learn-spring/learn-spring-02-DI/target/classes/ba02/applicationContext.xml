<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--使用name完成构造注入-->
    <bean id="student1" class="com.neu.ba02.Student">
        <constructor-arg name="age" value="17"/>
        <constructor-arg name="id" value="1001"/>
        <constructor-arg name="name" value="王八"/>
        <constructor-arg name="school" ref="school"/>
    </bean>

    <!--使用index完成构造注-->
    <bean id="student2" class="com.neu.ba02.Student">
        <constructor-arg index="0" value="张久"/>
        <constructor-arg index="1" value="17"/>
        <constructor-arg index="2" value="1002"/>
        <constructor-arg index="3" ref="school"/>
    </bean>

    <!--省略index按照构造器参数顺序完成构造注入-->
    <bean id="student3" class="com.neu.ba02.Student">
        <constructor-arg value="王五"/>
        <constructor-arg value="16"/>
        <constructor-arg value="1003"/>
        <constructor-arg ref="school"/>
    </bean>

    <!--声明引用类型-->
    <bean id="school" class="com.neu.ba02.School">
        <property name="schoolName" value="东北大学"/>
        <property name="address" value="和平区"/>
    </bean>
</beans>